<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_usr_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="rupi kaur"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/home_usr_img"
        app:layout_constraintEnd_toStartOf="@id/home_option"
        app:layout_constraintStart_toEndOf="@id/home_usr_img"
        app:layout_constraintTop_toTopOf="@id/home_usr_img" />

    <ImageView
        android:id="@+id/home_option"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_component_10___1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_inside_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_usr_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/home_bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="40dp"
            android:paddingTop="10dp"
            android:paddingEnd="40dp"
            android:paddingBottom="10dp"
            android:text="fdsfdh hfkjd d flkfd f ddjf  ljf d f d  fldjf ldfj fj dflj jfd j fjd js jdf jdsfj sdf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:id="@+id/like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_like"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_main_text"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_dashboard_black_24dp"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintTop_toTopOf="@id/like"
            app:layout_constraintBottom_toBottomOf="@id/like"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_outline"
            app:layout_constraintStart_toEndOf="@id/comment"
            app:layout_constraintTop_toTopOf="@id/comment"
            app:layout_constraintBottom_toBottomOf="@id/comment"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/home_like_img1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@id/home_like_img2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_inside_container" />

    <ImageView
        android:id="@+id/home_like_img2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="-7dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/home_like_img1"
        app:layout_constraintStart_toEndOf="@id/home_like_img1"
        app:layout_constraintTop_toTopOf="@id/home_like_img1" />

    <ImageView
        android:id="@+id/home_like_img3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="-7dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/home_like_img2"
        app:layout_constraintStart_toEndOf="@id/home_like_img2"
        app:layout_constraintTop_toTopOf="@id/home_like_img2" />

    <TextView
        android:id="@+id/home_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/home_like_img3"
        app:layout_constraintStart_toEndOf="@id/home_like_img3"
        app:layout_constraintTop_toTopOf="@id/home_like_img3" />

    <ImageView
        android:id="@+id/home_usr_img_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_like_img1"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_user_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="rupi kaur"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/home_usr_img_2"
        app:layout_constraintStart_toEndOf="@id/home_usr_img_2"
        app:layout_constraintTop_toTopOf="@id/home_usr_img_2" />

    <TextView
        android:id="@+id/home_description"
        android:layout_width="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_user_name_2"
        app:layout_constraintTop_toTopOf="@id/home_user_name_2"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>